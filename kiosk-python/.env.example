# RCV Kiosk Configuration
# Copy this file to .env and modify as needed

# RCV API Server URL (your backend)
RCV_API_URL=http://localhost:3000/api/v1

# For production (update with your actual server URL):
# RCV_API_URL=https://your-production-server.com/api/v1

# Display settings
DISPLAY_DURATION=20
SCAN_COOLDOWN=2

# TTS Settings (tl = Tagalog, en = English)
TTS_LANGUAGE=tl
TTS_ENABLED=true
